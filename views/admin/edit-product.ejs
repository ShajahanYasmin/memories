<%- include("../includes/header") %> 


</head>
<body>

<%- include("../includes/navigation") %>
<main>
  <form
    class="product-form"
    action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>"
    method="POST"
  >
    <div class="form-control">
      <label for="title">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        value="<% if (editing) { %><%= products.product_title %><% } %>"
      />
    </div>
    <div class="form-control">
      <label for="imageUrl">Image URL</label>
      <input
        type="text"
        name="imageUrl"
        id="imageUrl"
        value="<% if (editing) { %><%= products.product_img %><% } %>"
      />
    </div>
    <div class="form-control">
      <label for="price">Price</label>
      <input
        type="number"
        name="price"
        id="price"
        step="0.01"
        value="<% if (editing) { %><%= products.product_price %><% } %>"
      />
    </div>
    <div class="form-control">
      <label for="description">Description</label>
      <textarea name="description" id="description" rows="5">
<% if (editing) { %><%= products.product_description %><% } %></textarea
      >
    </div>
    <% if (editing) { %>
    <input type="hidden" value="<%= products.product_id %>" name="productId" />
    <% } %>

    <button class="btn" type="submit">
      <% if (editing) { %>Update Product<% } else { %>Add Product<% } %>
    </button>
  </form>
</main>
<%- include('../includes/end') %>
