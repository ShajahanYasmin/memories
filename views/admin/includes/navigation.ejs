<link rel="stylesheet" href="/css/nav.css" />
<script defer src="js/script.js"></script>
</head>
<body>
  <header class="section-header">
    <div class="logo">
      <img src="/logo.png" alt="logo image" class="logo__image" />
    </div>
    <nav class="nav">
      <ul class="nav__box">
        <li class="nav__item">
          <a
            class="<%= path === '/admin' ? 'active' : '' %> nav__link"
            href="/admin"
            
            >Home  Page
          </a>
        </li>
        <li class="nav__item">
          <a
            class="<%= path === 'admin/bookings' ? 'active' : '' %> nav__link"
            href="/bookings"
            
            >Bookings
          </a>
        </li>

        <li class="nav__item">
          <a
            class="<%= path === 'admin/gallery' ? 'active' : '' %> nav__link"
            href="/gallery"
            
            >Gallery
          </a>
        </li>

        <li class="nav__item">
          <a
            class="<%= path === 'admin/feedback' ? 'active' : '' %> nav__link"
            href="/feedback"
            
            >Feedback
          </a>
        </li>

       
        <% if(isAuthenticated && role==='admin') {%>
          <li class="nav__item">
            <a class="<%= path === 'admin/add-product' ? 'active' : '' %> nav__link" href="./add-product">Add Product
            </a>
        </li>
        <li class="nav__item">
            <a class="<%= path === 'admin/products' ? 'active' : '' %> nav__link" href="./products">Admin Produ
            </a>
        </li>
    <% } %>
        
        <% if(! isAuthenticated) {%>
        <li class="nav__item">
          <a
            class="<%= path === '/login' ? 'active' : '' %> nav__link"
            href="/login"
            
            >Login/Register
          </a>
        </li>
        <% } else {%>
        
        <li class="nav__item">
          <div class="dropdown">
            <button onclick="myFunction()" class="dropbtn"><%=user%></button>
            <div id="myDropdown" class="dropdown-content">
              <a
            class="<%= path === 'admin/feedback' ? 'active' : '' %> nav__link"
            href="./feedback"
            
              >feedback
          </a>
          <a
          class="<%= path === 'admin/orders' ? 'active' : '' %> nav__link"
          href="./orders"
          
          >Orders
        </a>
              
              
                <form  action="/logout" method="POST">
                  <button class="nav__link btn " type="submit">Logout</button>
                </form>
              
            
            </div>
          </div> 
        </li>
        <% }%>
      </ul>
    </nav>
  </header>
</body>
